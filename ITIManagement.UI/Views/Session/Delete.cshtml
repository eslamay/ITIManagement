@model ITIManagement.BLL.ViewModels.SessionVM
@{
    ViewData["Title"] = "Delete Session";
}

<h2>Are you sure you want to delete this session?</h2>

<div>
    <h4>Session</h4>
    <dl class="row">
        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.CourseName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
