@using ITIManagement.BLL.ViewModels.CourseVM
@using ITIManagement.BLL.Pagination
@model PageResult<CourseVM>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Courses</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add New Course</a>
    </div>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-md-6">
                <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by course name..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Instructor</th>
                        <th style="width: 220px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var course in Model.Items)
                        {
                            <tr>
                                <td>@course.Name</td>
                                <td>@course.Category</td>
                                <td>@course.InstructorName</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Details</a>
                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-success">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">No courses found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <nav class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-searchName="@ViewBag.SearchName">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-searchName="@ViewBag.SearchName">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-searchName="@ViewBag.SearchName">Next</a>
            </li>
        </ul>
    </nav>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-2">Back to Home</a>
</div>
