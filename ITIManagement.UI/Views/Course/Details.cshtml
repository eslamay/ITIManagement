@using ITIManagement.DAL.Models
@model Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <h2>Course Details</h2>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Instructor</dt>
                <dd class="col-sm-9">@Model.Instructor?.Name (@Model.InstructorId)</dd>
            </dl>

            <div class="mt-3 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
