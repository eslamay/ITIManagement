@model IEnumerable<ITIManagement.BLL.ViewModels.GradeVM>

@if (!Model.Any())
{
    <p>No grades found.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Trainee Name</th>
                <th>Session / Course</th>
                <th>Grade Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.TraineeName</td>
                    <td>@grade.SessionName</td>
                    <td>@grade.Value</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@grade.Id" method="post" style="display:inline"
                              onsubmit="return confirm('Are you sure you want to delete this grade?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>

                        <a asp-action="Edit" asp-route-id="@grade.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Grade pagination">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="AllGrades"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="AllGrades"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="AllGrades"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
