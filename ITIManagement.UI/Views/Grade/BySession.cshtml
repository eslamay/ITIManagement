@model IEnumerable<ITIManagement.BLL.ViewModels.GradeVM>

@{
    ViewData["Title"] = "Grades By Session";
}

<h2>Grades By Session</h2>

<form method="get" asp-action="BySession" class="mb-3">
    <div class="form-group">
        <label for="sessionId">Search by Session ID:</label>
        <input type="number" name="sessionId" id="sessionId" class="form-control" placeholder="Enter Session ID..." />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
    <a asp-action="BySession" class="btn btn-secondary mt-2">Reset</a>
</form>

@if (!Model.Any())
{
    <p>No grades found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
               
                <th>Trainee Name</th>
                <th>Course Name</th>
                <th>Session ID</th>
                <th>Degree</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    
                    <td>@grade.TraineeName</td>
                    <td>@grade.SessionName</td>
                    <td>@grade.SessionId</td>
                    <td>@grade.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
