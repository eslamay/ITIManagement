@model IEnumerable<ITIManagement.BLL.ViewModels.GradeVM>

<h2>All Grades</h2>

<form method="get" asp-action="AllGrades">
    <div class="form-group">
        <input type="text" name="searchName" class="form-control" placeholder="Search by trainee name..."
               value="@ViewBag.SearchName" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<div class="container mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>


@Html.Partial("_GradeForm", Model)
<p>
    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Back to Courses</a>
</p>